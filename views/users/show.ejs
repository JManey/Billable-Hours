<h1 class="text-center">User Details</h1>
<hr>

<div class="row justify-content-center">
<div class="card tan" style="width: 28rem;">
  <img src="<%=  user.avatar %>" class="card-img-top" alt="user image">
  <div class="card-body">
    <h5 class="card-title form-control text-center"><%= user.name %></h5>
  </div>
  <ul class="list-group list-group-flush">
    <li class="form-control">Address: <%=user.address %></li>
    <li class="form-control">Phone:    <%=user.phone %></li>
    <li class="form-control">Email:  <%=user.email %></li>
    <li class="form-control">Title:  <%=user.title %></li>
    <li class="form-control">Pay Rate:     <%=user.payRate %></li>
    <li class="form-control">Admin:    <%=user.isAdmin %></li>
  </ul>

