<% include ../partials/header.ejs %>



<h1 class="text-center">Edit User</h1>
<hr>

<div class="row justify-content-center">
<div class="card text-center tan p-2" style="width: 18rem;">
  <div class="form-group">
  <form action="/users/<%= user._id %>?_method=PUT" method="POST">
    <div class="form-group">
      <label for="name">Name</label>
      <input type="name" class="form-control" name="name" value="<%= user.name %>">
    </div>
    <div class="form-group">
      <label for="name">Phone Number</label>
      <input type="phone" class="form-control" name="phone" value="<%= user.phone %>">
    </div>
    <div class="form-group">
      <label for="name">Address</label>
      <input type="name" class="form-control" name="address" value="<%= user.address %>">
    </div>
    <div class="form-group">
      <label for="exampleFormControlInput1">Email address</label>
      <input type="email" class="form-control" name="email" value="<%= user.email %>">
    </div>
    <div class="form-group">
      <label for="exampleFormControlInput1">Pay Rate</label>
      <input type="number" class="form-control" name="payRate" value="<%= user.payRate %>">
    </div>
    <div class="form-group">
      <label for="exampleFormControlSelect1">Job Title</label>
      <select class="form-control" name="title" value="<%= user.title %>">
        <option>Receptionist</option>
        <option>Paralegal</option>
        <option>Attorney</option>
      </select>
    </div>
    <div class="form-group">
      <label for="exampleFormControlSelect1">Administrator</label>
      <select class="form-control" value="<%=user.isAdmin%>"</select> name="isAdmin">
        <option value="0">False</option>
        <option value="1">True</option>
      </select>
    </div>
      <input type="submit"
       class="btn btn-outline-light submit">
  </form>
</div>
</div>
</div>

<% include ../partials/footer.ejs %>