<%- include('../partials/header') %>


<h1>Enter New User</h1>
<p>Welcome to Billable Hours</p>

<form action="/users" method="POST">
    <div class="form-group">
      <label for="name">Name</label>
      <input type="name" class="form-control" name="name" placeholder="First Last">
    </div>
    <div class="form-group">
      <label for="name">Phone Number</label>
      <input type="phone" class="form-control" name="phone" placeholder="(512) 123-6789">
    </div>
    <div class="form-group">
      <label for="name">Address</label>
      <input type="name" class="form-control" name="address" placeholder="123 Easy St. Austin, TX 78748">
    </div>
    <div class="form-group">
      <label for="exampleFormControlInput1">Email address</label>
      <input type="email" class="form-control" name="email" placeholder="name@example.com">
    </div>
    <div class="form-group">
      <label for="exampleFormControlInput1">Pay Rate</label>
      <input type="number" class="form-control" name="payRate" placeholder="$00.00">
    </div>
    <div class="form-group">
      <label for="exampleFormControlSelect1">Job Title</label>
      <select class="form-control" name="title">
        <option>Receptionist</option>
        <option>Paralegal</option>
        <option>Attorney</option>
      </select>
    </div>
    <button>
    <input type="submit"
     class="btn btn-primary">Add User
  </button>
    
  </form>


<%- include('../partials/footer') %>