<% include ../partials/header.ejs %>



<h1 class="text-center">Edit Client</h1>
<p class="text-center">Welcome to Billable Hours</p>

<div class="card text-center bg-secondary p-2" style="width: 18rem;">
  <div class="form-group">
  <form action="/clients/<%= client._id %>?_method=PUT" method="POST">
    <div class="form-group">
      <label for="name">Name</label>
      <input type="name" class="form-control" name="name" value="<%= client.name %>">
    </div>
    <div class="form-group">
      <label for="name">Phone Number</label>
      <input type="phone" class="form-control" name="phone" value="<%= client.phone %>">
    </div>
    <div class="form-group">
      <label for="name">Address</label>
      <input type="name" class="form-control" name="address" value="<%= client.address %>">
    </div>
    <div class="form-group">
      <label for="exampleFormControlInput1">Email address</label>
      <input type="email" class="form-control" name="email" value="<%= client.email %>">
    </div>
      <input type="submit"
       class="btn btn-primary">
  </form>
</div>
</div>


<% include ../partials/footer.ejs %>
